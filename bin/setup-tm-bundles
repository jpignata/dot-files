get_bundle() {
  git clone $2 "$HOME/Library/Application Support/TextMate/Bundles/$1.tmbundle"
}
 
get_bundle 'Ack in Project', 'git://github.com/protocool/ack-tmbundle.git'
get_bundle 'RSpec' 'git://github.com/nakajima/rspec-tmbundle.git'
get_bundle 'Ctags' 'git://github.com/pivotal/tm-ctags-tmbundle.git'
get_bundle 'Cucumber', 'git://github.com/bmabey/cucumber-tmbundle.git'
get_bundle 'GitHub', 'git://github.com/drnic/github-tmbundle'

osascript -e 'tell app "TextMate" to reload bundles'